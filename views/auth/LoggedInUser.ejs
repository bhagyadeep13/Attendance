<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen font-sans antialiased">
  <%- include('../partials/nav') %>

  <div class="flex items-center justify-center min-h-screen p-4">
    <main class="bg-white shadow-xl rounded-2xl w-full max-w-3xl p-10 border border-gray-200 flex flex-col gap-6">

      <!-- Title -->
      <h1 class="text-3xl font-extrabold text-center text-red-600 mb-6">
        Welcome to the Attendance System
      </h1>

      <!-- Login Message Popup -->
      <% if (loginMessage) { %>
        <div id="login-popup" class="fixed top-5 right-5 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in-down font-bold">
          <strong>Success:</strong>
          <span class="ml-2"><%= loginMessage %></span>
        </div>

        <script>
          setTimeout(() => {
            const popup = document.getElementById('login-popup');
            if (popup) popup.remove();
          }, 3000);
        </script>

        <style>
          @keyframes fade-in-down {
            from { opacity: 0; transform: translateY(-10px); }
            to   { opacity: 1; transform: translateY(0); }
          }
          .animate-fade-in-down {
            animation: fade-in-down 0.4s ease-out;
          }
        </style>
      <% } %>

      <% if (user) { %>
        <!-- Logged-in Info Card -->
        <div class="bg-green-50 border border-green-300 text-green-700 px-6 py-4 rounded-lg shadow">
          <strong class="font-semibold">Logged in as:</strong>
          <ul class="list-disc list-inside mt-2 space-y-1">
            <li><strong>Name:</strong> <%= user.firstName %></li>
            <li><strong>Last Name:</strong> <%= user.lastName %></li>
            <li><strong>Email:</strong> <%= user.email %></li>
            <li><strong>UserType:</strong> <%= user.userType %></li>
          </ul>
        </div>

        <form action="/logout" method="POST" class="text-center">
          <button class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg shadow transition">
            Logout
          </button>
        </form>

      <% } else { %>
        <div class="text-center text-gray-600">
          <p>Please <a href="/login" class="text-blue-600 hover:underline font-medium">login</a> to continue.</p>
        </div>
      <% } %>

    </main>
  </div>
</body>
</html>
