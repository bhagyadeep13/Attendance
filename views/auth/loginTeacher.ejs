<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen font-sans antialiased">
  <%- include('../partials/nav') %>
  <%- include('../partials/animation') %>
  <%- include('../partials/toast') %>

  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white shadow-xl rounded-2xl w-full max-w-md p-10 border border-gray-200 flex flex-col gap-6">

      <!-- Title -->
      <h1 class="text-3xl font-extrabold text-center text-purple-700 drop-shadow mb-4">
        Teacher Login
      </h1>
      <p class="text-center text-gray-600 mb-6">
        Enter your credentials to access the attendance portal.
      </p>

      <!-- Error Message -->
      <%- include('../partials/error') %>

      <!-- Login Form -->
      <form action="/login" method="POST" class="flex flex-col gap-4">
        <input type="hidden" name="userType" value="teacher" />

        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-1">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter your email"
            value="<%= oldInput.email %>"
            required
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400 transition"
          />
        </div>

        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            required
            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400 transition"
          />
        </div>

        <input
          type="submit"
          value="Login"
          class="w-full bg-purple-600 text-white py-3 rounded-lg font-bold hover:bg-purple-700 shadow transition"
        />
      </form>

      <!-- Signup Link -->
      <div class="text-center text-gray-700 mt-4">
        <span>Don't have an account? </span>
        <a href="/signup" class="text-purple-600 hover:underline font-medium">Sign up</a>
      </div>

    </div>
  </div>
</body>
</html>
