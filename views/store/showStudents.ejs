<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <%- include('../partials/animation') %>
  <%- include('../partials/toast') %>

<div class="flex items-center justify-center min-h-screen">
  <div class="bg-white p-6 rounded shadow w-full max-w-4xl">
    <h1 class="text-2xl font-bold mb-4 text-center">Manage Students</h1>

    <!-- ðŸ”¹ Step 1: Select Class, Section & Year -->
    <form action="/showStudents" method="GET" class="flex flex-col md:flex-row gap-4 mb-6">
      <!-- Class -->
      <div class="flex-1">
        <label for="className" class="block mb-1 font-semibold">Select Class:</label>
        <select name="className" id="className" class="w-full border p-2 rounded">
          <option value="CSE" <%= selectedClass === 'CSE' ? 'selected' : '' %>>CSE</option>
          <!-- <option value="ECE" <%= selectedClass === 'ECE' ? 'selected' : '' %>>ECE</option>
          <option value="ME" <%= selectedClass === 'ME' ? 'selected' : '' %>>ME</option> -->
        </select>
      </div>

      <!-- Section -->
      <div class="flex-1">
        <label for="sectionName" class="block mb-1 font-semibold">Select Section:</label>
        <select name="sectionName" id="sectionName" class="w-full border p-2 rounded">
          <option value="A" <%= selectedSection === 'A' ? 'selected' : '' %>>A</option>
          <option value="B" <%= selectedSection === 'B' ? 'selected' : '' %>>B</option>
          <option value="C" <%= selectedSection === 'C' ? 'selected' : '' %>>C</option>
        </select>
      </div>

      <!-- Year -->
      <div class="flex-1">
        <label for="year" class="block mb-1 font-semibold">Select Year:</label>
        <select name="year" id="year" class="w-full border p-2 rounded">
          <option value="I" <%= selectedYear === 'I' ? 'selected' : '' %>>I</option>
          <option value="II" <%= selectedYear === 'II' ? 'selected' : '' %>>II</option>
          <option value="III" <%= selectedYear === 'III' ? 'selected' : '' %>>III</option>
          <option value="IV" <%= selectedYear === 'IV' ? 'selected' : '' %>>IV</option>
        </select>
      </div>

      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded self-end hover:bg-blue-700">
        View Students
      </button>
    </form>

    <% if (selectedClass && selectedSection && selectedYear) { %>
    <!-- ðŸ”¹ Step 2: Add Student Form -->
    <form action="/addStudent" method="POST" class="flex flex-col md:flex-row gap-4 mb-6 items-end">
      <!-- Hidden Inputs to keep selection -->
      <input type="hidden" name="className" value="<%= selectedClass %>"> 
      <input type="hidden" name="sectionName" value="<%= selectedSection %>">
      <input type="hidden" name="year" value="<%= selectedYear %>">

      <div>
        <label for="studentName" class="block mb-1 font-semibold">Student Name:</label>
        <input type="text" name="studentName" required class="border p-2 rounded w-full" />
      </div>
      <div>
        <label for="enrollmentNo" class="block mb-1 font-semibold">Enrollment No:</label>
        <input type="text" name="enrollmentNo" required class="border p-2 rounded w-full" />
      </div>

      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
        Add Student
      </button>
    </form>
    <% } %>

    <!-- ðŸ”¹ Step 3: Show Student List -->
    <% if (students && students.length > 0) { %>
      <form action="/deleteOneStudent" method="POST" onsubmit="return confirm('Are you sure you want to delete?');">
        <input type="hidden" name="className" value="<%= selectedClass %>"> 
        <input type="hidden" name="sectionName" value="<%= selectedSection %>">
        <input type="hidden" name="year" value="<%= selectedYear %>">

               <table class="w-full table-auto border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-200">
              <th class="border border-gray-300 px-4 py-2">#</th>
              <th class="border border-gray-300 px-4 py-2">Name</th>
              <th class="border border-gray-300 px-4 py-2">Enrollment No</th>
              <th class="border border-gray-300 px-4 py-2">Select</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
              <tr class="hover:bg-gray-50">
                <td class="border px-4 py-2"><%= index + 1 %></td>
                <td class="border px-4 py-2"><%= student.name %></td>
                <td class="border px-4 py-2"><%= student.enrollmentNo %></td>
                <td class="border px-4 py-2 text-center">
                  <input type="checkbox" name="studentIds" value="<%= student._id %>" class="mr-2">
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="mt-4 text-right space-x-2">
          <!-- ðŸ”¹ Delete selected students -->
          <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
            Delete Selected
          </button>
          <button type="button" onclick="selectAllCheckboxes()" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 mr-2">
          Select All
        </button>
        <script>
          function selectAllCheckboxes() {
            document.querySelectorAll('input[type="checkbox"][name="studentIds"]').forEach(cb => {
              if(cb.checked === false) cb.checked = true;
              else cb.checked = false;
            });
          }
        </script>
        </div>
      </form> <!-- end of delete selected form -->

      <!-- ðŸ”¹ Delete all students form -->
      <form action="/deleteStudents" method="POST" onsubmit="return confirm('Are you sure you want to delete ALL students?');" class="mt-2 text-right">
        <input type="hidden" name="className" value="<%= selectedClass %>"> 
        <input type="hidden" name="sectionName" value="<%= selectedSection %>">
        <input type="hidden" name="year" value="<%= selectedYear %>">

      </form>

    <% } else if (selectedClass && selectedSection && selectedYear) { %>
      <p class="text-center text-gray-500">
        No students found for <strong><%= selectedClass %>-<%= selectedSection %> (<%= selectedYear %>)</strong>.
      </p>
    <% } %>
  </div>
</div>
<script>
  // Store values from EJS into JavaScript variables
  const selectedClass = "<%= selectedClass %>";
  const selectedSection = "<%= selectedSection %>";
  const selectedYear = "<%= selectedYear %>";

  // Print them in console
  console.log("Class:", selectedClass);
  console.log("Section:", selectedSection);
  console.log("Year:", selectedYear);

  // Example: Show on screen
  document.addEventListener("DOMContentLoaded", () => {
    if (selectedClass && selectedSection && selectedYear) {
      const info = `Selected: ${selectedClass}-${selectedSection} (${selectedYear})`;
      const div = document.createElement("div");
      div.className = "text-center text-blue-700 font-semibold my-4";
      div.innerText = info;
      document.body.prepend(div); // adds at top
    }
  });
</script>

</body>
</html>
