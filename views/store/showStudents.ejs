<%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <%- include('../partials/animation') %>
  <%- include('../partials/toast') %>

  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white shadow-xl rounded-2xl w-full max-w-6xl p-10 flex flex-col gap-6 border border-gray-200 mb-12">

      <h1 class="text-3xl font-extrabold mb-6 text-center text-purple-700">
        Manage Students
      </h1>

      <!-- Step 1: Select Class, Section & Year -->
      <form action="/showStudents" method="GET" class="flex flex-col md:flex-row gap-4 mb-6 items-end">
        <div class="flex-1">
          <label for="className" class="block mb-1 font-semibold text-gray-700">Select Class:</label>
          <select name="className" id="className" class="w-full p-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm">
            <option value="CSE" <%= selectedClass === 'CSE' ? 'selected' : '' %>>CSE</option>
          </select>
        </div>

        <div class="flex-1">
          <label for="sectionName" class="block mb-1 font-semibold text-gray-700">Select Section:</label>
          <select name="sectionName" id="sectionName" class="w-full p-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 shadow-sm">
            <option value="A" <%= selectedSection === 'A' ? 'selected' : '' %>>A</option>
            <option value="B" <%= selectedSection === 'B' ? 'selected' : '' %>>B</option>
            <option value="C" <%= selectedSection === 'C' ? 'selected' : '' %>>C</option>
          </select>
        </div>

        <div class="flex-1">
          <label for="year" class="block mb-1 font-semibold text-gray-700">Select Year:</label>
          <select name="year" id="year" class="w-full p-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400 shadow-sm">
            <option value="I" <%= selectedYear === 'I' ? 'selected' : '' %>>I</option>
            <option value="II" <%= selectedYear === 'II' ? 'selected' : '' %>>II</option>
            <option value="III" <%= selectedYear === 'III' ? 'selected' : '' %>>III</option>
            <option value="IV" <%= selectedYear === 'IV' ? 'selected' : '' %>>IV</option>
          </select>
        </div>

        <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-xl shadow hover:bg-white hover:text-blue-500 border transition-all duration-200">
  View Students
</button>
      </form>

      <!-- Step 2: Add Student Form -->
      <% if (selectedClass && selectedSection && selectedYear) { %>
        <form action="/addStudent" method="POST" class="flex flex-col md:flex-row gap-4 mb-6 items-end">
          <input type="hidden" name="className" value="<%= selectedClass %>"> 
          <input type="hidden" name="sectionName" value="<%= selectedSection %>">
          <input type="hidden" name="year" value="<%= selectedYear %>">

          <div class="flex-1">
            <label for="studentName" class="block mb-1 font-semibold text-gray-700">Student Name:</label>
            <input type="text" name="studentName" required class="w-full p-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 shadow-sm" />
          </div>

          <div class="flex-1">
            <label for="enrollmentNo" class="block mb-1 font-semibold text-gray-700">Enrollment No:</label>
            <input type="text" name="enrollmentNo" required class="w-full p-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 shadow-sm" />
          </div>

         <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-xl shadow hover:bg-white hover:text-blue-500 border transition-all duration-200">
  Add Student
</button>
        </form>
      <% } %>

      <!-- Step 3: Student List -->
      <% if (students && students.length > 0) { %>
        <form action="/deleteOneStudent" method="POST" onsubmit="return confirm('Are you sure you want to delete?');">
          <input type="hidden" name="className" value="<%= selectedClass %>"> 
          <input type="hidden" name="sectionName" value="<%= selectedSection %>">
          <input type="hidden" name="year" value="<%= selectedYear %>">

          <div class="overflow-x-auto rounded-xl shadow-lg border border-gray-200">
            <table class="min-w-full table-auto border-collapse">
              <thead class="bg-gradient-to-r from-purple-500 via-pink-500 to-orange-400 text-white text-lg font-bold">
                <tr>
                  <th class="px-4 py-2">#</th>
                  <th class="px-4 py-2">Name</th>
                  <th class="px-4 py-2">Enrollment No</th>
                  <th class="px-4 py-2">Select</th>
                </tr>
              </thead>
              <tbody class="bg-white/90">
                <% students.forEach((student, index) => { %>
                  <tr class="hover:bg-purple-50 transition-all">
                    <td class="border px-4 py-2 text-center"><%= index + 1 %></td>
                    <td class="border px-4 py-2"><%= student.name %></td>
                    <td class="border px-4 py-2"><%= student.enrollmentNo %></td>
                    <td class="border px-4 py-2 text-center">
                      <input type="checkbox" name="studentIds" value="<%= student._id %>" class="mr-2">
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Actions -->
          <div class="mt-4 flex justify-end gap-2 flex-wrap">
           <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-xl shadow hover:bg-white hover:text-blue-500 border transition-all duration-200">
  Delete Selected
</button>

<button type="button" onclick="selectAllCheckboxes()" class="bg-blue-500 text-white px-6 py-2 rounded-xl shadow hover:bg-white hover:text-blue-500 border transition-all duration-200">
  Select All
</button>
          </div>
        </form>

        <script>
          function selectAllCheckboxes() {
            document.querySelectorAll('input[type="checkbox"][name="studentIds"]').forEach(cb => cb.checked = !cb.checked);
          }
        </script>

      <% } else if (selectedClass && selectedSection && selectedYear) { %>
        <p class="text-center text-gray-700 mt-6 font-medium">
          No students found for <strong><%= selectedClass %>-<%= selectedSection %> (<%= selectedYear %>)</strong>.
        </p>
      <% } %>
    </div>
  </div>
</body>
</html>
