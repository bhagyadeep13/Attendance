<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-pink-200 via-yellow-100 to-blue-200 min-h-screen font-sans antialiased">
  <%- include('../partials/nav') %>
  <%- include('../partials/toast') %>
  <%- include('../partials/animation') %>

  <main class="container mx-auto mt-12 px-4 sm:px-6 lg:px-8 flex flex-col items-center">
    <div class="bg-gradient-to-br from-red-200 via-yellow-100 to-indigo-100 rounded-3xl shadow-2xl p-10 sm:p-14 w-full max-w-7xl border-4 border-black">

      <!-- Welcome -->
      <h1 class="text-5xl font-extrabold text-center bg-clip-text text-transparent bg-gradient-to-r from-blue-500 via-teal-600 to-indigo-600 mb-10 drop-shadow-md opacity-0 animate-slide-fade-in">
        Welcome <%= userType %> ğŸ‘‹ <br>
      </h1>

      <hr class="border-t-4 border-indigo-300 rounded-full shadow-lg w-2/3 mx-auto mb-12">

      <!-- Role-Specific Features -->
      <section class="mb-16 text-center space-y-6">
        <p class="text-xl sm:text-2xl text-gray-800 leading-relaxed bg-gradient-to-r from-lime-100 via-teal-100 to-indigo-100 rounded-xl p-6 shadow-inner border border-black font-serif italic">
          <span class="font-extrabold text-indigo-700 text-3xl block mb-4">
            Dashboard Features
          </span>
          <span class="text-gray-800" style="font-family: cursive, serif;">
            Explore the available actions based on your role.
          </span>
        </p>

        <div class="overflow-x-auto">
          <table class="min-w-full bg-gradient-to-br from-pink-100 via-yellow-50 to-blue-100 rounded-3xl shadow-2xl border-4 border-indigo-400 overflow-hidden">
            <thead>
              <tr>
                <th class="px-8 py-5 text-2xl font-bold text-white border-b-4 border-indigo-400 text-center bg-gradient-to-r from-indigo-500 via-teal-400 to-lime-400 tracking-wider shadow-2xl rounded-tl-3xl rounded-tr-3xl drop-shadow-xl">
                  ğŸŒŸ Feature
                </th>
                <th class="px-8 py-5 text-2xl font-bold text-white border-b-4 border-indigo-400 text-center bg-gradient-to-r from-indigo-500 via-teal-400 to-lime-400 tracking-wider shadow-2xl drop-shadow-xl">
                  ğŸ’¡ Description
                </th>
              </tr>
            </thead>
            <tbody>
              <% if (userType === 'student') { %>
                <tr class="hover:scale-105 hover:bg-pink-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-lime-700 text-center font-extrabold">ğŸ“š</td>
                  <td class="px-6 py-5 text-lg text-indigo-900 text-center font-bold">View your <span class="text-indigo-700 underline">attendance</span> & <span class="text-indigo-700 underline">courses</span></td>
                </tr>
                <tr class="hover:scale-105 hover:bg-yellow-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-blue-700 text-center font-extrabold">ğŸ“‚</td>
                  <td class="px-6 py-5 text-lg text-blue-900 text-center font-bold">Access <span class="text-blue-700 underline">resources</span></td>
                </tr>
              <% } %>

              <% if (userType === 'teacher') { %>
                <tr class="hover:scale-105 hover:bg-green-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-teal-700 text-center font-extrabold">ğŸ“</td>
                  <td class="px-6 py-5 text-lg text-teal-900 text-center font-bold">Mark <span class="text-teal-700 underline">attendance</span> for your classes</td>
                </tr>
                <tr class="hover:scale-105 hover:bg-lime-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-yellow-700 text-center font-extrabold">ğŸ“˜</td>
                  <td class="px-6 py-5 text-lg text-yellow-900 text-center font-bold">Manage <span class="text-yellow-700 underline">courses</span> & <span class="text-yellow-700 underline">upload resources</span></td>
                </tr>
              <% } %>

              <% if (userType === 'admin') { %>
                <tr class="hover:scale-105 hover:bg-red-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-red-700 text-center font-extrabold">ğŸ‘¥</td>
                  <td class="px-6 py-5 text-lg text-red-900 text-center font-bold">Manage <span class="text-red-700 underline">users</span> (students, teachers, admins)</td>
                </tr>
                <tr class="hover:scale-105 hover:bg-indigo-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-indigo-700 text-center font-extrabold">ğŸ“Š</td>
                  <td class="px-6 py-5 text-lg text-indigo-900 text-center font-bold">View <span class="text-indigo-700 underline">attendance reports</span> & analytics</td>
                </tr>
                <tr class="hover:scale-105 hover:bg-teal-100/80 transition-all duration-300 cursor-pointer">
                  <td class="px-6 py-5 text-3xl text-teal-700 text-center font-extrabold">ğŸ—‘ï¸</td>
                  <td class="px-6 py-5 text-lg text-teal-900 text-center font-bold">Delete <span class="text-teal-700 underline">projects or comments</span></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>

      <!-- Action Button -->
      <div class="flex justify-center">
        <% if (userType === 'student') { %>
          <a href="/attendance" class="px-10 py-4 bg-gradient-to-r from-green-500 via-teal-500 to-lime-400 text-white rounded-full shadow-xl hover:scale-105 transition-all duration-300 font-bold text-lg border-2 border-white hover:border-teal-400">
            Go to My Dashboard
          </a>
        <% } else if (userType === 'teacher') { %>
          <a href="/mark-attendance" class="px-10 py-4 bg-gradient-to-r from-yellow-500 via-pink-500 to-red-400 text-white rounded-full shadow-xl hover:scale-105 transition-all duration-300 font-bold text-lg border-2 border-white hover:border-yellow-400">
            Go to Teacher Panel
          </a>
        <% } else if (userType === 'admin') { %>
          <a href="/admin" class="px-10 py-4 bg-gradient-to-r from-indigo-500 via-teal-500 to-lime-400 text-white rounded-full shadow-xl hover:scale-105 transition-all duration-300 font-bold text-lg border-2 border-white hover:border-indigo-400">
            Go to Admin Panel
          </a>
        <% } %>
      </div>
    </div>
  </main>
</body>
</html>
