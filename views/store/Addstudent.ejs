<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 min-h-screen font-sans">
  
  <!-- Navbar + Animations -->
  <%- include('../partials/nav') %>
  <%- include('../partials/animation') %>

  <!-- Main Card -->
  <main class="container mx-auto bg-white shadow-xl rounded-2xl p-10 mt-12 max-w-3xl border border-gray-200">
    
    <!-- Title -->
    <h1 class="text-3xl md:text-4xl font-extrabold text-primary text-center mb-8">
      Register as a New User
    </h1>

    <!-- Registration Form -->
    <form action="/add-student" method="POST" class="space-y-5">
      
      <input
        type="text"
        name="name"
        placeholder="Enter Your Name"
        class="w-full px-4 py-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition"
        required
      />

      <input
        type="text"
        name="enrollmentNo"
        placeholder="Enter Your Enrollment Number"
        class="w-full px-4 py-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition"
        required
      />

      <input
        type="text"
        name="className"
        placeholder="Enter Your Class Name (e.g., 1st Year, 2nd Year)"
        class="w-full px-4 py-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition"
        required
      />

      <input
        type="text"
        name="sectionName"
        placeholder="Enter Your Section (A, B, C, etc.)"
        class="w-full px-4 py-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition"
        required
      />

      <!-- Submit Button -->
      <button 
        type="submit"
        class="w-full bg-white text-black border border-gray-300 py-3 rounded-lg font-semibold hover:bg-primary hover:text-white transition duration-300"
      >
        Add Student
      </button>
    </form>
  </main>
</body>
</html>
